<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs")%>
</head>
<body>
    <h1>Edit Pokemon</h1>
    <form action="/pokemon/<%= data.id %>?_method=PUT" method="POST">
        <input type="text" name="name" value="<%= data.name%>" placeholder="name">
        <input type="text" name="img" value="<%= data.img%>" placeholder="image URL">
        <input type="text" name="type" value="<%= data.type%>" placeholder="type"> <br>
        Stats:<input type="text" name="hp" value="<%= data.stats.hp%>" placeholder="hp">
        <input type="text" name="attack" value="<%= data.stats.attack%>" placeholder="attack"> <br>
        <input type="text" name="defense" value="<%= data.stats.defense%>" placeholder="defense">
        <input type="text" name="speed" value="<%= data.stats.speed%>" placeholder="speed">
        <input type="submit" value="Edit Pokemon">
    </form>
    <%- include("./partials/footer.ejs")%>
</body>
</html>